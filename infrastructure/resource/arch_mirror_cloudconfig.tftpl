#cloud-config
hostname: ${hostname}
users:
  - name: archmirror
    gecos: arch-mirror user
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users
    lock_passwd: true
    ssh_import_id:
      - gh:r1cebank
    shell: /bin/bash
  - name: ubuntu
    sudo: false
    ssh_redirect_user: true
preserve_hostname: false
resize_rootfs: true